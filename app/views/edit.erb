<form action=<%= "/recipes/#{@recipe.id}" %> method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name">Name:</label><br>
  <input type="text" id="name" name="name" value=<%= @recipe.name %>><br>
  <label for="ingredients">Ingredients:</label><br>
  <input type="text" id="ingredients" name="ingredients" value=<%= @recipe.ingredients %>><br><br>
  <label for="cook_time">Cook Time:</label><br>
  <input type="text" id="cook_time" name="cook_time" value=<%= @recipe.cook_time %>><br><br>
  <input type="submit" value="Save">
</form>